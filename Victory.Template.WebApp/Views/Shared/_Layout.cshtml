    <script>

        // vue 嵌套挂载，有数据，问题，所以这用JQ 绑定一下数据 Layout 不适合用uve
        //本框架，缺点 目前之支持2级别菜单。 其实 多一级循环就可以支持三级菜单，等有具体需求的时候 再实现吧

        $(document).ready(function () {

            bootbox.setDefaults("locale", "zh_CN");

            MyAjax({
                type: "POST",
                url: '/Home/GetLoginUser',
                showloading: false,
                success: function (res) {
                    if (!res.Success) {
                        alert_info(res.Message);
                        return;
                    }
                    //  console.log(res);

                    var _self = {};
                    _self.userId = res.Content.UserId;
                    _self.userName = res.Content.UserName;
                    _self.sex = res.Content.Sex;
                    _self.workId = res.Content.WorkId;
                    _self.menu = res.Content.Menu;

                    $(".username").html(_self.userName + " [" + _self.workId + "]");

                    let imgurl = "/AdminLte/img/user2-160x160.jpg";

                    if (_self.sex == 1) {
                        imgurl = "/AdminLte/img/user4-128x128.jpg"
                    }

                    $("#img_toplogo").attr("src", imgurl);
                    $("#img_rightlogo").attr("src", imgurl);
                    $("#image_leftlogo").attr("src", imgurl);


                    //加载菜单
                    LoadMenu(_self.menu);


                }

            });
        });

        //加载并展开当前菜单
        function LoadMenu(list) {
            //console.log(list);
            let content = "";
            let location = window.location.pathname;
            let isActive = "";
            console.log(location);


            for (let item of list) {

                isActive = "treeview";

                for (let li of item.Childs) {
                    if (li.Menu_Url.toLowerCase() == location.toLowerCase()) {
                        isActive = "active treeview menu-open"
                    }
                }

                content += `<li class=" ${isActive}">
                            <a href="#">
                                <i class="${item.Icon}"></i> <span>${item.Menu_Name}</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu"> `;


                for (let li of item.Childs) {

                    //支持三级菜单,加多一层循环，加载第第三层菜单

                    if (li.Childs.length > 0) {
                        content += `<li class="treeview">
                                <a href="#"><i class="${li.Icon}"></i> ${li.Menu_Name}
                                     <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">`;


                        for (let l of li.Childs) {
                            content += `<li><a href="${li.Menu_Url}"><i class="${li.Icon}"></i> ${l.Menu_Name}</a></li>`;
                        }

                        content += `  </ul> </li>`;


                    } else {
                        content += `<li><a href="${li.Menu_Url}"><i class="${li.Icon}"></i> ${li.Menu_Name}</a></li>`
                    }



                }

                content += `</ul> </li>`;
            }

            $("#menu_list").html(content);
        }

